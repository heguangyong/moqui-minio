<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Bucket Management"
        default-menu-index="10"
        default-menu-include="true"
        require-authentication="false">

    <actions>
        <set field="userId" from="ec.user.userId"/>
        <set field="isAdmin" from="ec.user.isInGroup('ADMIN') || ec.user.isInGroup('ADMIN_ADV')"/>
        <set field="scope" from="scope ?: 'user'"/>
        <script><![CDATA[
            // 构建服务调用参数
            Map serviceParams = [userId: userId]
            if (isAdmin && scope == 'all') {
                serviceParams.scope = 'all'
            }
            ec.service.sync().name("minio.MinioServices.list#Bucket").parameters(serviceParams).call()
        ]]></script>
    </actions>

    <widgets>
        <container-box id="bucket-management-box">
            <box-header>
                <label text="Bucket Management" type="h2"/>
            </box-header>

            <!-- 创建桶对话框 -->
            <box-toolbar>
                <container-dialog id="CreateBucketDialog" button-text="Create Bucket" type="primary">
                    <form-single name="CreateBucketForm" transition="createBucket" focus-field="bucketId">
                        <field name="bucketId"><default-field title="Bucket ID"><text-line size="20"/></default-field></field>
                        <field name="bucketName"><default-field title="Bucket Name"><text-line size="20"/></default-field></field>
                        <field name="userId"><default-field><hidden/></default-field></field>
                        <field name="quotaLimit"><default-field title="Quota Limit (Bytes)"><text-line size="15" default-value="5368709120"/></default-field></field>
                        <field name="submitButton"><default-field title="Save"><submit/></default-field></field>
                    </form-single>
                </container-dialog>

                <!-- 管理员查看选项 -->
                <section name="adminView" condition="isAdmin">
                    <widgets>
                        <container>
                            <link url="." text="查看我的网盘" parameter-map="[scope:'user']" condition="scope == 'all'"/>
                            <label text=" | " condition="scope == 'all'"/>
                            <link url="." text="查看所有网盘" parameter-map="[scope:'all']" condition="scope != 'all'"/>
                        </container>
                    </widgets>
                </section>
            </box-toolbar>

            <!-- 桶列表 -->
            <box-body>
                <form-list name="ListBuckets" list="bucketList" paginate="true" skip-form="true">
                    <field name="bucketId">
                        <header-field title="Bucket ID"/>
                        <default-field><display/></default-field>
                    </field>
                    <field name="bucketName">
                        <header-field title="Bucket Name"/>
                        <default-field><display/></default-field>
                    </field>
                    <field name="quotaLimit">
                        <header-field title="Quota Limit (Bytes)"/>
                        <default-field><display/></default-field>
                    </field>
                    <field name="createdDate">
                        <header-field title="Created Date"/>
                        <default-field><display format="yyyy-MM-dd HH:mm:ss"/></default-field>
                    </field>
                    <field name="delete">
                        <header-field title="Actions"/>
                        <default-field>
                            <link url="deleteBucket" text="Delete" link-type="anchor">
                                <parameter name="bucketId" from="bucketId"/>
                                <parameter name="userId" from="userId"/>
                            </link>
                        </default-field>
                    </field>
                </form-list>
            </box-body>

        </container-box>
    </widgets>
</screen>
