<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        require-authentication="true" default-menu-title="Bucket Management">
    <parameter name="userId" from="ec.user.userAccount.userId"/>
    <transition name="createBucket">
        <service-call name="moqui.netdisk.create#Bucket" in-map="context"/>
        <default-response url="."/>
    </transition>
    <transition name="deleteBucket">
        <parameter name="bucketId"/>
        <service-call name="moqui.netdisk.delete#Bucket" in-map="context"/>
        <default-response url="."/>
    </transition>
    <actions>
        <service-call name="moqui.netdisk.list#Bucket" out-map="bucketList" in-map="[userId: userId]"/>
    </actions>
    <widgets>
        <container-box>
            <box-header title="${ec.l10n.localize('Manage Buckets')}"/>
            <box-body>
                <form-single name="CreateBucketForm" transition="createBucket">
                    <field name="bucketId">
                        <default-field title="Bucket ID"><text/></default-field>
                    </field>
                    <field name="userId">
                        <default-field><hidden/></default-field>
                    </field>
                    <field name="submit">
                        <default-field><submit text="Create Bucket"/></default-field>
                    </field>
                </form-single>
                <form-list name="BucketListForm" list="bucketList" header-dialog="true">
                    <entity-find entity-name="moqui.netdisk.Bucket" list="bucketList" limit="50">
                        <econdition field-name="userId" value="${userId}"/>
                    </entity-find>
                    <field name="bucketId">
                        <header-field title="Bucket ID" show-order-by="true"><text-find size="30" default-operator="equals"/></header-field>
                        <default-field><display also-hidden="false"/></default-field>
                    </field>
                    <field name="quotaLimit">
                        <header-field title="Quota Limit (Bytes)" show-order-by="true"><text-find size="20" default-operator="equals"/></header-field>
                        <default-field><display also-hidden="false"/></default-field>
                    </field>
                    <field name="createdDate">
                        <header-field title="Created Date" show-order-by="true"><date-period time="true"/></header-field>
                        <default-field><display also-hidden="false"/></default-field>
                    </field>
                    <field name="delete">
                        <header-field title="Action"/>
                        <default-field>
                            <link url="deleteBucket" text="Delete" link-type="anchor">
                                <parameter name="bucketId" from="bucketId"/>
                                <parameter name="userId" from="userId"/>
                            </link>
                        </default-field>
                    </field>
                </form-list>
            </box-body>
        </container-box>
    </widgets>
</screen>