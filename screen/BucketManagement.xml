<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Bucket Management" default-menu-index="10" default-menu-include="true"
        require-authentication="true">
    <transition name="createBucket">
        <service-call name="netdisk.create#Bucket" in-map="context"/>
        <default-response url="."/>
    </transition>
    <transition name="deleteBucket">
        <parameter name="bucketId"/>
        <parameter name="userId"/>
        <service-call name="netdisk.delete#Bucket" in-map="context"/>
        <default-response url="."/>
    </transition>
    <pre-actions>
        <set field="userId" from="ec.user.userId"/>
        <service-call name="netdisk.list#Bucket" in-map="[userId: userId]" out-map="context"/>
        <set field="html_title" value="Bucket Management"/>
        <set field="html_description" value="Manage your MinIO storage buckets"/>
        <set field="html_keywords" value="netdisk,bucket,storage,minio"/>
    </pre-actions>
    <widgets>
        <container-box id="find-bucket-box">
            <box-header><label text="${ec.l10n.localize('Find Buckets')}" type="h3"/></box-header>
            <box-toolbar>
                <container-dialog id="CreateBucketDialog" button-text="${ec.l10n.localize('Create Bucket')}" type="primary">
                    <form-single name="CreateBucketForm" transition="createBucket" focus-field="bucketId">
                        <field name="bucketId"><default-field title="${ec.l10n.localize('Bucket ID')}"><text-line size="20"/></default-field></field>
                        <field name="bucketName"><default-field title="${ec.l10n.localize('Bucket Name')}"><text-line size="20"/></default-field></field>
                        <field name="userId"><default-field><hidden/></default-field></field>
                        <field name="quotaLimit"><default-field title="${ec.l10n.localize('Quota Limit (Bytes)')}"><text-line size="15" default-value="5368709120"/></default-field></field>
                        <field name="submitButton"><default-field title="${ec.l10n.localize('Save')}"><submit/></default-field></field>
                    </form-single>
                </container-dialog>
            </box-toolbar>
            <box-body>
                <form-list name="ListBuckets" list="bucketList" paginate="true" skip-form="true" header-dialog="true" select-columns="true" show-csv-button="true">
                    <field name="bucketId">
                        <header-field title="${ec.l10n.localize('Bucket ID')}" show-order-by="case-insensitive"><text-find size="20"/></header-field>
                        <default-field><display/></default-field>
                    </field>
                    <field name="bucketName">
                        <header-field title="${ec.l10n.localize('Bucket Name')}" show-order-by="case-insensitive"><text-find size="20"/></header-field>
                        <default-field><display/></default-field>
                    </field>
                    <field name="quotaLimit">
                        <header-field title="${ec.l10n.localize('Quota Limit (Bytes)')}" show-order-by="true"><text-find size="15"/></header-field>
                        <default-field><display/></default-field>
                    </field>
                    <field name="createdDate">
                        <header-field title="${ec.l10n.localize('Created Date')}" show-order-by="true"><date-period time="true"/></header-field>
                        <default-field><display format="yyyy-MM-dd HH:mm:ss"/></default-field>
                    </field>
                    <field name="delete">
                        <header-field title="${ec.l10n.localize('Actions')}"/>
                        <default-field>
                            <link url="deleteBucket" text="${ec.l10n.localize('Delete')}" link-type="anchor">
                                <parameter name="bucketId" from="bucketId"/>
                                <parameter name="userId" from="userId"/>
                            </link>
                        </default-field>
                    </field>
                    <field name="findButton">
                        <header-field><submit text="${ec.l10n.localize('Find')}"/></header-field>
                        <default-field><ignored/></default-field>
                    </field>
                </form-list>
            </box-body>
        </container-box>
    </widgets>
</screen>