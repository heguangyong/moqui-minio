<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Bucket Management"
        default-menu-index="10"
        default-menu-include="true"
        require-authentication="true">

    <transition name="createBucket">
        <service-call name="minio.MinioServices.create#Bucket"/>
        <default-response url="."/>
    </transition>
    <transition name="updateBucket">
        <service-call name="minio.MinioServices.update#Bucket"/>
        <default-response url="."/>
    </transition>
    <transition name="deleteBucket">
        <service-call name="minio.MinioServices.delete#Bucket"/>
        <default-response url="."/>
    </transition>

    <actions>
        <set field="userId" from="ec.user.userId"/>
        <set field="isAdmin" from="ec.user.isInGroup('ADMIN') || ec.user.isInGroup('ADMIN_ADV')"/>
        <set field="scope" from="scope ?: 'user'"/>
        <log level="info" message="BucketManagement actions 执行, userId=${userId}, scope=${scope}"/>
        <script><![CDATA[
            // 构建服务调用参数
            Map serviceParams = [userId: userId]
            if (scope == 'all') {
                serviceParams.scope = 'all'
            }
            Map result = ec.service.sync().name("minio.MinioServices.list#Bucket").parameters(serviceParams).call()
            bucketList = result.bucketList
            ec.logger.info("获取到 bucketList, 数量=" + (bucketList ? bucketList.size() : 0))
        ]]></script>
    </actions>

    <widgets>
        <container-box id="bucket-management-box">
            <box-header>
                <label text="Bucket Management" type="h2"/>
            </box-header>

            <!-- 创建桶对话框 -->
            <box-toolbar>
                <container-dialog id="CreateBucketDialog" button-text="Create Bucket" type="primary">
                    <form-single name="CreateBucketForm" transition="createBucket" focus-field="bucketId">
                        <field name="bucketId"><default-field title="Bucket ID"><text-line size="20"/></default-field></field>
                        <field name="bucketName"><default-field title="Bucket Name"><text-line size="20"/></default-field></field>
                        <field name="userId"><default-field><hidden/></default-field></field>
                        <field name="description"><default-field title="Description"><text-area rows="3" cols="50"/></default-field></field>
                        <field name="quotaLimit"><default-field title="Quota Limit (Bytes)"><text-line size="15" default-value="5368709120"/></default-field></field>
                        <field name="isPublic"><default-field title="Public Access">
                            <drop-down>
                                <option key="N" text="Private"/>
                                <option key="Y" text="Public"/>
                            </drop-down>
                        </default-field></field>
                        <field name="versioning"><default-field title="Versioning">
                            <drop-down>
                                <option key="N" text="Disabled"/>
                                <option key="Y" text="Enabled"/>
                            </drop-down>
                        </default-field></field>
                        <field name="encryption"><default-field title="Encryption">
                            <drop-down>
                                <option key="N" text="Disabled"/>
                                <option key="Y" text="Enabled"/>
                            </drop-down>
                        </default-field></field>
                        <field name="submitButton"><default-field title="Save"><submit/></default-field></field>
                    </form-single>
                </container-dialog>

                <!-- 管理员查看选项 -->
                <section name="adminView" condition="isAdmin">
                    <widgets>
                        <container>
                            <link url="." text="查看我的网盘" parameter-map="[scope:'user']" condition="scope == 'all'"/>
                            <link url="." text="查看所有网盘" parameter-map="[scope:'all']" condition="scope != 'all'"/>
                        </container>
                    </widgets>
                </section>
            </box-toolbar>

            <!-- 桶列表 -->
            <box-body>
                <form-list name="ListBuckets" list="bucketList" paginate="true" skip-form="true">
                    <field name="bucketId">
                        <header-field title="Bucket ID"/>
                        <default-field><display/></default-field>
                    </field>
                    <field name="bucketName">
                        <header-field title="Bucket Name"/>
                        <default-field><display/></default-field>
                    </field>
                    <field name="quotaLimit">
                        <header-field title="Quota Limit (Bytes)"/>
                        <default-field><display/></default-field>
                    </field>
                    <field name="createdDate">
                        <header-field title="Created Date"/>
                        <default-field><display format="yyyy-MM-dd HH:mm:ss"/></default-field>
                    </field>
                    <field name="actions">
                        <header-field title="Actions"/>
                        <default-field>
                            <link url="deleteBucket" text="Delete" confirmation="确定要删除这个网盘吗？删除后将无法恢复。">
                                    <parameter name="bucketId" from="bucketId"/>
                                    <parameter name="userId" from="userId"/>
                                </link>
                                <label text=" | "/>
                                <container-dialog id="EditBucketDialog" button-text="Edit">
                                    <form-single name="EditBucketForm" transition="updateBucket">
                                        <field name="bucketId"><default-field><hidden/></default-field></field>
                                        <field name="userId"><default-field><hidden/></default-field></field>
                                        <field name="bucketName"><default-field title="Bucket Name"><text-line size="20"/></default-field></field>
                                        <field name="description"><default-field title="Description"><text-area rows="3" cols="50"/></default-field></field>
                                        <field name="quotaLimit"><default-field title="Quota Limit (Bytes)"><text-line size="15"/></default-field></field>
                                        <field name="submitButton"><default-field title="Update"><submit/></default-field></field>
                                    </form-single>
                                </container-dialog>
                        </default-field>
                    </field>
                </form-list>
            </box-body>

        </container-box>
    </widgets>
</screen>
