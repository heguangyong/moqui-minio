<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="文件管理器" require-authentication="true">

    <parameter name="resourceRoot"/>
    <parameter name="bucketName"/>
    <always-actions>
        <set field="mantleContentRoot" from="ec.user.getPreference('mantle.content.root') ?: 'dbresource://mantle/content'"/>
        <set field="mantleContentLargeRoot" from="ec.user.getPreference('mantle.content.large.root') ?: 'dbresource://mantle/content'"/>
        <set field="resourceRoot" from="resourceRoot ?: (bucketName ? 'minio://' + bucketName : mantleContentRoot)"/>
    </always-actions>

    <!-- set read-only=true because in spite of setting requestType:'post' some requests come as gets -->
    <transition name="command" read-only="true">
        <actions>
            <!-- 检查resourceRoot是否为minio协议，如果是则使用MinIO专用Connector -->
            <if condition="resourceRoot?.startsWith('minio://')">
                <!-- 提取bucketName并直接调用MinIO Connector -->
                <set field="minioConnector" from="new org.moqui.impl.service.minio.MinioElFinderConnector(ec, bucketName)"/>
                <script>
                    // 设置MinioElFinderConnector需要的参数到context
                    ec.context.put("otherParameters", ec.web.parameters)
                    minioConnector.runCommand()
                    responseMap = context.responseMap
                    fileLocation = context.fileLocation
                    fileInline = context.fileInline
                </script>
                <else>
                    <!-- 对于非MinIO资源，使用通用ElFinder服务 -->
                    <service-call name="org.moqui.impl.ElFinderServices.run#Command" out-map="context"
                            in-map="context + [otherParameters:ec.web.parameters]"/>
                </else>
            </if>
            <if condition="fileLocation">
                <script>ec.web.sendResourceResponse(fileLocation, fileInline ?: false)</script>
                <else><script>ec.web.sendJsonResponse(responseMap)</script></else>
            </if>
        </actions>
        <default-response type="none"/>
    </transition>

    <actions>
        <!-- 简化：直接设置为MinIO资源，无需额外根选择 -->
        <set field="resourceRoot" from="bucketName ? 'minio://' + bucketName : 'minio://default'"/>
    </actions>
    <widgets>
        <render-mode><text type="html,vuet,qvt"><![CDATA[
            <div id="elfinder"></div>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/smoothness/jquery-ui.min.css" type="text/css"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/smoothness/theme.min.css" type="text/css"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/elfinder/2.1.62/css/elfinder.min.css" type="text/css"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/elfinder/2.1.62/css/theme.min.css" type="text/css"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" type="text/css"/>
            <script>
(function bootMinioElFinder() {
    var dependencyQueue = [
        'https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js',
        'https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js',
        'https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js',
        'https://cdnjs.cloudflare.com/ajax/libs/elfinder/2.1.62/js/elfinder.min.js',
        'https://cdnjs.cloudflare.com/ajax/libs/elfinder/2.1.62/js/i18n/elfinder.zh_CN.min.js'
    ];

    function loadNext(index) {
        if (index >= dependencyQueue.length) {
            waitForElFinder(0);
            return;
        }
        moqui.loadScript(dependencyQueue[index], function(err) {
            if (err) {
                console.error('[ElFinder] Failed to load dependency', dependencyQueue[index], err);
                return;
            }
            loadNext(index + 1);
        });
    }

    function waitForElFinder(attempt) {
        var jq = window.jQuery;
        if (!jq || !jq.fn) {
            if (attempt < 200) {
                setTimeout(function() { waitForElFinder(attempt + 1); }, 50);
            } else {
                console.error('[ElFinder] jQuery not available after loading dependencies');
            }
            return;
        }
        if (typeof jq.fn.select2 !== 'function') {
            jq.fn.select2 = function() { return this; };
        }
        if (typeof jq.fn.validate !== 'function') {
            jq.fn.validate = function() { return this; };
        }
        if (typeof jq.fn.elfinder !== 'function') {
            if (attempt < 200) {
                setTimeout(function() { waitForElFinder(attempt + 1); }, 50);
            } else {
                console.error('[ElFinder] elFinder plugin not available');
            }
            return;
        }
        jq(function() {
            jq('#elfinder').elfinder({
                url: '/apps/minio/Bucket/FileExplorer/ElFinder/command',
                customData: { moquiSessionToken: '${ec.web.sessionToken}', resourceRoot: '${resourceRoot}', bucketName: '${bucketName}' },
                lang: 'zh_CN',
                defaultView: 'list',
                requestType: 'post',
                rememberLastDir: false,
                height: 700,
                cssAutoLoad: false,
                title: 'MinIO File Manager',
                commands: [ 'open', 'reload', 'home', 'up', 'back', 'forward', 'getfile', 'quicklook',
                    'download', 'rm', 'rename', 'mkdir', 'mkfile', 'upload', 'edit', 'info', 'view', 'help',
                    'sort'],
                uiOptions: {
                    toolbar: [
                        ['back', 'forward'],
                        ['reload', 'home', 'up'],
                        ['mkdir', 'mkfile', 'upload'],
                        ['open', 'download'],
                        ['info'],
                        ['rm', 'rename', 'edit'],
                        ['view', 'help']
                    ],
                    navbar: { minWidth: 150, maxWidth: 800 },
                    path: false
                }
            });
        });
    }

    loadNext(0);
})();
            </script>
        ]]></text></render-mode>
    </widgets>
</screen>
