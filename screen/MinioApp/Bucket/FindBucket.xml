<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="${ec.l10n.localize('存储桶管理')}"
        default-menu-index="10"
        default-menu-include="true"
        require-authentication="true">

    <transition name="createBucket">
        <actions>
            <!-- 将GB转换为Bytes -->
            <if condition="quotaLimitGB">
                <set field="quotaLimit" from="Long.valueOf(quotaLimitGB) * 1024 * 1024 * 1024"/>
            <else>
                <set field="quotaLimit" value="5368709120"/><!-- 5GB默认值 -->
            </else>
            </if>
        </actions>
        <service-call name="minio.MinioServices.create#Bucket"/>
        <default-response url="."/>
    </transition>
    <transition name="updateBucket">
        <actions>
            <!-- 将GB转换为Bytes -->
            <if condition="quotaLimitGB">
                <set field="quotaLimit" from="Long.valueOf(quotaLimitGB) * 1024 * 1024 * 1024"/>
            </if>
        </actions>
        <service-call name="minio.MinioServices.update#Bucket"/>
        <default-response url="."/>
    </transition>
    <transition name="deleteBucket">
        <service-call name="minio.MinioServices.delete#Bucket"/>
        <default-response url="."/>
    </transition>
    <transition name="fileExplorer">
        <default-response url="../FileExplorer/ElFinder"/>
    </transition>

    <actions>
        <set field="isAdmin" from="ec.user.isInGroup('ADMIN') || ec.user.isInGroup('ADMIN_ADV')"/>

        <!-- 简化的权限逻辑：管理员传null查看所有，普通用户传当前用户ID -->
        <service-call name="minio.MinioServices.list#Bucket"
                      in-map="[userId:(isAdmin ? null : ec.user.userId),
                               bucketId:bucketId,
                               bucketName:bucketName,
                               description:description,
                               pageIndex:pageIndex,
                               pageSize:pageSize]"
                      out-map="context"/>
    </actions>

    <widgets>
        <container-dialog id="CreateBucketDialog" button-text="${ec.l10n.localize('创建存储桶')}">
            <form-single name="CreateBucketForm" transition="createBucket">
                <!-- Hidden fields -->
                <field name="isCreate"><default-field><hidden default-value="true"/></default-field></field>
                <field name="userId"><default-field><hidden default-value="${ec.user.userId}"/></default-field></field>

                <!-- Visible fields -->
                <field name="bucketId">
                    <default-field title="${ec.l10n.localize('存储桶ID')}">
                        <text-line size="30" maxlength="63"/>
                        <label text="只能包含小写字母、数字和连字符(-)，3-63字符，不能以连字符开头或结尾" type="p" style="text-muted"/>
                    </default-field>
                </field>

                <field name="bucketName">
                    <default-field title="${ec.l10n.localize('存储桶名称')}">
                        <text-line size="30"/>
                    </default-field>
                </field>

                <field name="description">
                    <default-field title="${ec.l10n.localize('描述')}">
                        <text-area rows="3" cols="50"/>
                    </default-field>
                </field>

                <field name="quotaLimitGB">
                    <default-field title="${ec.l10n.localize('配额限制(GB)')}">
                        <drop-down>
                            <option key="1" text="1 GB"/>
                            <option key="2" text="2 GB"/>
                            <option key="5" text="5 GB (默认)" selected="selected"/>
                            <option key="10" text="10 GB"/>
                            <option key="20" text="20 GB"/>
                            <option key="50" text="50 GB"/>
                            <option key="100" text="100 GB"/>
                            <option key="500" text="500 GB"/>
                            <option key="1024" text="1 TB"/>
                        </drop-down>
                    </default-field>
                </field>

                <field name="submitButton">
                    <default-field title="">
                        <submit text="${ec.l10n.localize('创建')}"/>
                    </default-field>
                </field>
            </form-single>
        </container-dialog>

        <form-list name="BucketList" list="bucketList" skip-form="true" skip-end="true">
            <field name="bucketId">
                <header-field title="${ec.l10n.localize('存储桶ID')}" show-order-by="true">
                    <text-find size="15" hide-options="true"/>
                </header-field>
                <default-field><display/></default-field>
            </field>
            <field name="bucketName">
                <header-field title="${ec.l10n.localize('存储桶名称')}" show-order-by="true">
                    <text-find size="15" hide-options="true"/>
                </header-field>
                <default-field><display/></default-field>
            </field>
            <field name="description">
                <header-field title="${ec.l10n.localize('描述')}" show-order-by="true">
                    <text-find size="15" hide-options="true"/>
                </header-field>
                <default-field><display/></default-field>
            </field>
            <field name="userId">
                <header-field title="${ec.l10n.localize('创建者')}">
                    <display text=" "/>
                </header-field>
                <default-field>
                    <display-entity entity-name="moqui.security.UserAccount"
                                    text="${userFullName ?: username ?: userId}"
                                    key-field-name="userId"/>
                </default-field>
            </field>
            <field name="createdDate">
                <header-field title="${ec.l10n.localize('创建时间')}" show-order-by="true"/>
                <default-field>
                    <display format="yyyy-MM-dd HH:mm"/>
                </default-field>
            </field>
            <field name="quotaLimit">
                <header-field title="${ec.l10n.localize('存储使用')}"/>
                <default-field>
                    <display text="${ec.l10n.format((usedStorage ?: 0) / (1024*1024*1024), '#,##0.##')} / ${ec.l10n.format(quotaLimit / (1024*1024*1024), '#,##0.#')} GB"/>
                </default-field>
            </field>
            <field name="usagePercent">
                <header-field title="${ec.l10n.localize('使用率')}"/>
                <default-field>
                    <display text="${usedStorage &amp;&amp; quotaLimit ? ec.l10n.format((usedStorage / quotaLimit) * 100, '#,##0.#') + '%' : '0%'}"/>
                </default-field>
            </field>
            <field name="fileCount">
                <header-field title="${ec.l10n.localize('文件数')}"/>
                <default-field>
                    <display text="${fileCount ?: 0}"/>
                </default-field>
            </field>
            <field name="find">
                <header-field title="${ec.l10n.localize('查找')}">
                    <submit/>
                </header-field>
                <default-field>
                    <link url="fileExplorer" text="${ec.l10n.localize('文件管理')}" btn-type="primary">
                        <parameter name="bucketName" from="bucketId"/>
                    </link>
                </default-field>
            </field>
            <field name="editButton">
                <header-field title=""><display text=" "/></header-field>
                <default-field>
                    <container-dialog id="EditBucketDialog_${bucketId}" button-text="${ec.l10n.localize('编辑')}" btn-type="info">
                        <form-single name="EditBucketForm_${bucketId}" transition="updateBucket" map-ref="bucketList_entry">
                            <field name="bucketId"><default-field><hidden/></default-field></field>
                            <field name="userId"><default-field><hidden default-value="${ec.user.userId}"/></default-field></field>
                            <field name="bucketName">
                                <default-field title="${ec.l10n.localize('存储桶名称')}">
                                    <text-line size="30"/>
                                </default-field>
                            </field>
                            <field name="description">
                                <default-field title="${ec.l10n.localize('描述')}">
                                    <text-area rows="3" cols="50"/>
                                </default-field>
                            </field>
                            <field name="quotaLimitGB">
                                <default-field title="${ec.l10n.localize('配额限制(GB)')}">
                                    <drop-down>
                                        <option key="1" text="1 GB"/>
                                        <option key="2" text="2 GB"/>
                                        <option key="5" text="5 GB"/>
                                        <option key="10" text="10 GB"/>
                                        <option key="20" text="20 GB"/>
                                        <option key="50" text="50 GB"/>
                                        <option key="100" text="100 GB"/>
                                        <option key="500" text="500 GB"/>
                                        <option key="1024" text="1 TB"/>
                                    </drop-down>
                                </default-field>
                            </field>
                            <field name="submitButton">
                                <default-field title="">
                                    <submit text="${ec.l10n.localize('更新')}"/>
                                </default-field>
                            </field>
                        </form-single>
                    </container-dialog>
                </default-field>
            </field>
            <field name="deleteButton">
                <header-field title=""><display text=" "/></header-field>
                <default-field>
                    <link url="deleteBucket" text="${ec.l10n.localize('删除')}" btn-type="danger"
                          confirmation="确定要删除存储桶 '${bucketName ?: bucketId}' 吗？删除后将无法恢复。">
                        <parameter name="bucketId"/>
                        <parameter name="userId" from="ec.user.userId"/>
                    </link>
                </default-field>
            </field>

            <!-- 列布局组织：将相关字段分组到列中 -->
            <form-list-column><field-ref name="bucketId"/><field-ref name="bucketName"/><field-ref name="description"/></form-list-column>
            <form-list-column><field-ref name="userId"/><field-ref name="createdDate"/></form-list-column>
            <form-list-column><field-ref name="quotaLimit"/><field-ref name="usagePercent"/><field-ref name="fileCount"/></form-list-column>
            <form-list-column><field-ref name="find"/><field-ref name="editButton"/><field-ref name="deleteButton"/></form-list-column>
        </form-list>
    </widgets>
</screen>